<div class="panel radius callout">
  <h5>Reviews</h5>
</div>

{{#link-to "reviews.new"}}New{{/link-to}}

{{outlet}}

<hr>

<ul>
  {{#each review in model}}
    <li>
      <p>
        {{#link-to "reviews.show" review.id}}
